# LeaderOracle Backend Configuration Template
# Copy this file to .env and fill in your actual values

# =======================
# AUTHENTICATION & SECURITY
# =======================
# Generate a SHA-256 hash of your desired auth key:
# echo -n "your-secret-key" | sha256sum
AUTH_KEY=your-auth-key-sha256-hash-here

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-jwt-secret-key-here

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =======================
# AI API KEYS
# =======================
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# OpenRouter API Key (get from https://openrouter.ai/keys)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# =======================
# REDIS CONFIGURATION
# =======================
# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Redis URLs for different environments
REDIS_URL_DEV=redis://localhost:6379/1
REDIS_URL_TEST=redis://localhost:6379/2

# =======================
# CACHE CONFIGURATION
# =======================
# Enable/disable caching
CACHE_ENABLED=true

# Cache time-to-live in seconds
CACHE_TTL=3600

# Authentication cache TTL in seconds
AUTH_CACHE_TTL=300

# =======================
# MODEL CONFIGURATION
# =======================
# Path to the model directory
MODEL_DIR=/workspace/model

# Maximum text generation length
MAX_GENERATION_LENGTH=512

# Default temperature for text generation
DEFAULT_TEMPERATURE=0.3

# =======================
# API CONFIGURATION
# =======================
# API metadata
API_TITLE=LeaderOracle API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered leadership and geopolitical analysis API

# =======================
# PERFORMANCE SETTINGS
# =======================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=300

# =======================
# LOGGING CONFIGURATION
# =======================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/app/logs/leaderoracle.log

# =======================
# CORS CONFIGURATION
# =======================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://leader-oracle-ai.fly.dev

# =======================
# EXAMPLE VALUES FOR DEVELOPMENT
# =======================
# AUTH_KEY=5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8
# OPENAI_API_KEY=sk-1234567890abcdef1234567890abcdef12345678
# OPENROUTER_API_KEY=sk-or-1234567890abcdef1234567890abcdef
# REDIS_URL=redis://localhost:6379/0
# MODEL_DIR=/workspace/model
# LOG_LEVEL=INFO

# =======================
# SETUP INSTRUCTIONS
# =======================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Generate AUTH_KEY using: echo -n "your-secret-key" | sha256sum
# 4. Get API keys from respective providers
# 5. Ensure Redis is running on the specified URL
# 6. Keep the .env file secure and never commit it to version control 